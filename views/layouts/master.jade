doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Superbear
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/master.css')
    link(rel='stylesheet', href='/css/statement.css')
    link(href='//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css', rel='stylesheet')
    script(src='/javascripts/angular.js')
    link(rel='stylesheet', href='/css/style_footer.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')

  body
    nav.navbar.navbar-default.navbar-static-top.masterheader
      // Bootstrap Default navbar
      .container-fluid
        .navbar-hearder
          // navbar header ocuupy 3 columns
          a#brandname.navbar-brand Superbear
        .collapse.navbar-collapse
          ul.nav.navbar-nav.navlist
            // middle menu list
            li Service Request 
            li  Automatic Quote 
            li  My Statement 
            li Auto Parts 
            li
              a(href='/serviceprovider/profile')  Profile 
          // ends of middle menu list
          ul.nav.navbar-nav.navbar-right.headerright.navlist
            // right menu list
            li
              p welcome #{user.email}
            li
              | HELP 
              i.fa.fa-question-circle.fa-lg
            li
              a(href='/logout')
                | LOG OUT 
                i.fa.fa-sign-in.fa-lg(aria-hidden='true')
          // ends of right menu list
    block content
    .main-footer(style='height:350px;')
     .container.main-footer
      .row.footer_row
       .row.footer_row_1
        .col-md-4.footer_logo
         img.img-responsive(src='/images/logo.png', width='60%/')
        .col-md-2.footer_choice
         h5
           strong COMPANY
         p About us
         p Blog
         p Careers
         p Press
        .col-md-2.footer_choice
         h5
           strong VEHICLE OWNER
         p How it Works
         p Services
         p Terms Of Service
        .col-md-2.footer_choice(style='color:white;')
         h5
           strong SERVICE PROVIDER
         p How it Works
         p Terms & Condition
        .col-md-2.footer_choice
         h5(style='color:white;')
           strong HELP
         p Contact Us
         p Help Center
         p Privacy Policy
       .row.footer_row_2(align='center')
        .col-md-5
         .row.footer_row_2_1
          .col-md-8
           .row(style=' margin-bottom:3em;')
            .col-md-3(style='margin:0.3em 0em 0em 0.5em;')
             img.img-responsive(src='/images/Vibrating_Phone_512.png', style=' float:right; margin:;')
            .col-md-7.footer_choice(style=' margin-left:-4em;')
             p Customer Support
             h5(style='color:white;')
               strong (866)900-8900 
         .row.footer_row_2_2
          .col-md-8.footer_copy_right
           p @ 2017 CAKNOW Technology INC. All rights reserved.
        .col-md-5(style=' position:relative; margin:5em 0em 0em 6em;')
         .col-md-2
          img.img-responsive(src='/images/Facebook1.png')   
         .col-md-2
          img.img-responsive(src='/images/twitter1.png')
         .col-md-2
          img.img-responsive(src='/images/googleplus1.png')
         .col-md-2
           img.img-responsive(src='/images/instagram1.png')
         .col-md-2
           img.img-responsive(src='/images/linkedin1.png')
         .col-md-2
           img.img-responsive(src='/images/youtube1.png')      
      // footer
